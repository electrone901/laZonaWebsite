<% include ../partials/header %>

    <header class="jumbotron" id="orange">
        <div class="container">
            <h1>Event</h1>
            <p>
                <a class="btn btn-primary btn-lg" href="/events/new">Add New Event</a>
            </p>
            <form action="/events" method="GET" class="form-inline">
                <div class="form-group">
                    <input type="text" name="search" placeholder="Search By Title..." class="form-control">
                    <button class="btn btn-default">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                        Search
                    </button>
                </div>
            </form>
        </div>
    </header>
    
    <div class="row text-center flex" >
        <div class="col-md-12">
            <% if(noMatch !== null){ %>
                <h3><%= noMatch %></h3>
            <% } %>
        </div>
        <% events.forEach(function(event){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <a href="/events/<%= event._id %>">
                        <img src="<%= event.image %>">
                    </a>
                    <div class="caption">
                        <h4><%= event.title %></h4>
                    </div>
                    <p>
                        <a href="/events/<%= event._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>