<% include ../partials/header %>

    <div class="row">
        <h1 class="center">Create a New Event</h1>
        <div class="form">
            <form action="/events" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="label label-info" for="title">Title</label>
                    <input class="form-control" type="text" name="event[title]" placeholder="title">
                </div>
                <div class="form-group">
                    <label class="label label-info" for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <label class="label label-info" for="description">Description</label>
                    <textarea class="form-control" name="event[description]" placeholder="description" rows="5"></textarea>
                </div>
                 <div class="form-group">
                    <label class="label label-info" for="location">Location</label>
                    <input class="form-control" type="text" name="event[location]" placeholder="location">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/events">Go back</a>
        </div>
    </div>

<% include ../partials/footer %>