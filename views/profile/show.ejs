<% include ../partials/header %>

    <div class="row">
        <h1 class="center">Profile</h1>
        <div class="col-md-4">
            <div class="thumbnail">
                <% if(user.avatar){ %>
                    <img src="<%= user.avatar %>" alt="user profile image">
                <% } else { %>
                    <img src="/images/defaulAvater.png" alt="user profile image">
                <% } %>
            </div>
            <% if(currentUser && user._id.equals(currentUser._id)){ %>
                <a class="btn btn-warning" href="/profile/<%= user._id %>/edit">
                    Edit
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            <% } %>
        </div>
        <div class="col-md-8">
            <% if(user.firstName && user.lastName !== null){ %>
                <h3><strong>Name:</strong> <%= user.firstName + " " + user.lastName %></h3>
            <% } else { %>
                <h3><strong>Name:</strong> <%= user.username %></h3>
            <% } %>
            <h3><strong>Email:</strong> <a href="mailto:<%= user.email %>"><%= user.email %></a></h3>
        </div>
    </div>

<% include ../partials/footer %>