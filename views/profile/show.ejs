<% include ../partials/header %>

    <div class="row">
        <h1 class="center">Profile</h1>
        <div class="form">
            <form action="/profile/<%= user.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label class="label label-info" for="username">Username</label><br>
                    <input class="form-control" type="text" placeholder=<%= user.username %> readonly>
                </div>
                <div class="form-group">
                    <label class="label label-info" for="firstName">First Name</label>
                    <input class="form-control" type="text" name="user[firstName]" value="<%= user.firstName %>">
                </div>
                <div class="form-group">
                    <label class="label label-info" for="lastName">Last Name</label>
                    <input class="form-control" type="text" name="user[lastName]" value="<%= user.lastName %>">
                </div>
                <div class="form-group">
                    <label class="label label-info" for="email">Email</label>
                    <input class="form-control" type="text" name="user[email]" value="<%= user.email %>">
                </div>
            </form>
        </div>
    </div>

<% include ../partials/footer %>