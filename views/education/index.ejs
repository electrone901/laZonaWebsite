<% include ../partials/header %>

    <header class="jumbotron">
        <div class="container">
            <h1>Education</h1>
            <p>
                <a class="btn btn-primary btn-lg" href="/education/new">Add New Education</a>
            </p>
            <form action="/education" method="GET" class="form-inline">
                <div class="form-group">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    <input type="text" name="search" placeholder="Subject Search..." class="form-control">
                    <input type="submit" value="Search" class="btn btn-default">
                </div>
            </form>
        </div>
    </header>
    
    <div class="row">
        <div class="col-md-12">
            <% if(noMatch !== null){ %>
                <h3><%= noMatch %></h3>
            <% } %>
        </div>
        <% education.forEach(function(subject){ %>
            <div class="col-md-12 col-sm-6">
                <div class="thumbnail ridgeBorder">
                    <a href="/education/<%= subject._id %>"><p><%= subject.title %></p></a>
                    <p><%- subject.description.substring(0, 100) %>...</p>
                    <span><%= moment(subject.createdAt).fromNow() %> by <a href="/profile/<%= subject.author.id %>"><%= subject.author.username %></span></a>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>