<% include ../partials/header %>

    <header class="jumbotron" id="orange">
        <div class="container">
            <h1>Educación</h1>
            <p>
                <a class="btn btn-primary btn-lg" href="/education/new">Agregar Nueva Educación</a>
            </p>
            <form action="/education/title" method="GET" class="form-inline">
               <div class="form-group">
                    <input type="text" name="search" placeholder="Búsqueda por Título..." class="form-control">
                    <button class="btn btn-default">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                        Buscar
                    </button>
                </div>
            </form>
        </div>
    </header>
    
    <div class="row">
        <div class="col-md-12">
            <% if(noMatch !== null){ %>
                <h3 class="text-center"><%= noMatch %></h3><br>
            <% } %>
        </div>
        <% education.forEach(function(subject){ %>
            <div class="col-md-12 col-sm-6">
                <div class="thumbnail ridgeBorder">
                    <a href="/education/<%= subject._id %>"><p><%= subject.title %></p></a>
                    <p><%- subject.description.substring(0, 100) %>...</p>
                    <span><%= moment(subject.createdAt).fromNow() %> by <a href="/profile/<%= subject.author.id %>"><%= subject.author.username %></span></a>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>