<% include ../partials/header %>

    <div class="thumbnail">
        <div class="caption-full">
            <h4 class="pull-right"><%= education.createdAt.toDateString() %></h4>
            <h4><a><%= education.title %></a></h4>
            <p class="bodyText"><%= education.description %></p>
            <p>
                <em>Presentado por <a href="/profile/<%= education.author.id %>"><strong><%= education.author.username %></strong></a>, <%= moment(education.createdAt).fromNow() %></em>
            </p>
            <% if(currentUser && education.author.id.equals(currentUser._id)){ %>
                <a class="btn btn-warning" href="/education/<%= education._id %>/edit">Editar</a>
                <form id="delete-form" action="/education/<%= education._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Borrar</button>
                </form>
            <% } %>
            <hr>
            <div class="row center">
                <div class="col-sm-4">
                    <form action="/education/<%= education._id %>/ratings" method="POST">
                        <div class="form-group">
                            <button class="btn btn-sm btn-primary">
                                (<%= education.ratings.length %>)
                                Gustos
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="fb-share-button" data-href="/education/<%= education._id %>" data-layout="button" data-size="large" data-mobile-iframe="true">
                            <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fclonezone-ysongh.c9users.io%2Fjobs&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Share</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <% if(!education.isFlag){ %>
                        <form action="/education/<%= education._id %>/flags" method="POST">
                            <div class="form-group">
                                <button class="btn btn-sm btn-primary">
                                    (<%= education.flags.length %>)
                                    Flags This Post
                                </button>
                            </div>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <div class="well">
        <div class="text-right">
            <a class="btn btn-success pull-right" role="button" data-toggle="collapse" href="#collapseComment" aria-expanded="false" aria-controls="collapseComment">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Agregar Nuevo Comentario</a>
        </div>
        <h4><strong>Comentarios <span class="glyphicon glyphicon glyphicon-comment" aria-hidden="true"></span></strong></h4>
        <div class="collapse" id="collapseComment">
            <div class="well leftBorder">
                <% if(!currentUser) { %>
                    <h5>Debes iniciar sesión antes de poder comentar. <a href="/login">Haga clic aquí</a> para ir a la página de inicio de sesión.</h5>
                <% } %>
                <% if(currentUser) { %>
                    <h4>Escribe tu comentario <span class="glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span></h4>
                    <form id="add-comment-form" action="/education/<%= education._id %>/comments" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" disabled value="<%= currentUser.username %>">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="comment[text]" placeholder="Escribe tu comentario..." form="add-comment-form" rows="5" cols="70"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-sm">Comentario <span class="glyphicon glyphicon-comment" aria-hidden="true"></span></button>
                        </div>
                    </form>
                <% } %>
            </div>
        </div>
        <hr>
        <% if (education.comments.length === 0) { %>
            <em class="grey">Sin comentarios aún.</em>
        <% } %>
        <% education.comments.reverse().forEach(function(comment) { %>
        <div class="row">
            <div class="col-md-12">
                <strong>
                    <% if (currentUser && currentUser._id.equals(comment.author.id)) { %>
                        <span class="glyphicon glyphicon-user blue" aria-hidden="true"></span>
                    <% } else { %>
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                    <% } %>
                    <a href="/profile/<%= comment.author.id %>"><strong><%= comment.author.username %></strong></a>
                </strong>
                
                <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
                
                <p><%= comment.text %></p>
                
                <% if (currentUser && currentUser._id.equals(comment.author.id)) { %>
                
                    <a class="btn btn-xs btn-warning" role="button" data-toggle="collapse" href="#collapseEdit<%= comment._id %>" aria-expanded="false" aria-controls="collapse<%= comment._id %>">
                    Editar</a>
        
                    <form id="delete-form" action="/education/<%= education._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST" style="display: inline;">
                        <button class="btn btn-xs btn-danger">Borrar</button>
                    </form>
        
                    <div class="collapse" id="collapseEdit<%= comment._id %>">
                        <div class="well leftBorder2">
                            <h4>Edita tu comentario <span class="glyphicon glyphicon-edit" aria-hidden="true"></span></h4>
                            <form id="edit-comment-form<%= comment._id %>" action="/education/<%= education._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                                <div class="form-group">
                                    <input class="form-control" type="text" disabled value="<%= currentUser.username %>">
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" name="comment[text]" placeholder="Your comment text..." form="edit-comment-form<%= comment._id %>" rows="5" cols="70"><%= comment.text %></textarea>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-warning btn-sm">Editar comentario <span class="glyphicon glyphicon-comment" aria-hidden="true"></span></button>
                                </div>
                            </form>
                        </div>
                    </div>
                <% } %>
        <hr>
            </div>
        </div>
        <% }) %>
    </div>


<% include ../partials/footer %>