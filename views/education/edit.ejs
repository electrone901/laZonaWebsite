<% include ../partials/header %>

    <div class="row">
        <h1 class="center">Editar <%= education.title %></h1>
        <div class="form">
            <form action="/education/<%= education._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label class="label label-info" for="title">Título</label>
                    <input class="form-control" type="text" name="education[title]" value="<%= education.title %>">
                </div>
                <div class="form-group">
                    <label class="label label-info" for="description">Descripción</label>
                    <textarea class="form-control" name="education[description]" rows="5"><%= education.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Enviar</button>
                </div>
            </form>
            <a href="/education/<%= education._id %>">Regresa</a>
        </div>
    </div>

<% include ../partials/footer %>