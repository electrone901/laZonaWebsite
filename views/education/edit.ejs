<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="center">Edit <%= education.title %></h1>
        <div class="form">
            <form action="/education/<%= education._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="education[title]" value="<%= education.title %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="education[description]" ><%= education.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/education">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>