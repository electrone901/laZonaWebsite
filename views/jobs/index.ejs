<% include ../partials/header %>

    <header class="jumbotron">
        <div class="container">
            <h1>Jobs</h1>
            <p>
                <a class="btn btn-primary btn-lg" href="/jobs/new">Add New Jobs</a>
            </p>
            <form action="/jobs" method="GET" class="form-inline">
                <div class="form-group">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    <input type="text" name="search" placeholder="Search By Title..." class="form-control">
                    <input type="submit" value="Search" class="btn btn-default">
                </div>
            </form>
        </div>
    </header>
    
    <div class="row">
        <div class="col-md-12">
            <% if(noMatch !== null){ %>
                <h3><%= noMatch %></h3>
            <% } %>
        </div>
        <% jobs.forEach(function(job){ %>
            <div class="col-md-12 col-sm-6">
                <div class="thumbnail">
                    <a href="/jobs/<%= job._id %>"><p><%= job.title %></p></a>
                    <p><%- job.description.substring(0, 100) %>...</p>
                    <span><%= job.date.toDateString() %> by <a href="/profile/<%= job.author.id %>"><%= job.author.username %></span></a>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>