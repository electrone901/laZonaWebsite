<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Job</p>
            <div class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <div class="caption-full">
                    <h4 class="pull-right"><%= job.date.toDateString() %></h4>
                    <h4><a><%= job.title %></a></h4>
                    <p><%= job.description %></p>
                    <p>
                        <em>Submitted By <%= job.author.username %></em>
                    </p>
                    <% if(currentUser && job.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning" href="/jobs/<%= job._id %>/edit">Edit</a>
                        <form id="delete-form" action="/jobs/<%= job._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>