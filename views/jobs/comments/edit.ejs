<% include ../../partials/header %>

    <div class="row">
        <h1 class="center">Edit Comment</h1>
        <div class="form">
            <form action="/jobs/<%= job_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label class="label label-info" for="text">Text</label>
                    <textarea class="form-control" name="comment[text]" rows="3"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/jobs/<%= job_id %>">Go back</a>
        </div>
    </div>

<% include ../../partials/footer %>