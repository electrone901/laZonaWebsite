<% include ../../partials/header %>

    <div class="row">
        <h1 class="center">Add New Comment to <%= job.title %></h1>
        <div class="form">
            <form action="/jobs/<%= job._id %>/comments" method="POST">
                <div class="form-group">
                    <label class="label label-info" for="text">Text</label>
                    <textarea class="form-control" name="comment[text]" placeholder="comment" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/jobs/<%= job._id %>">Go back</a>
        </div>
    </div>

<% include ../../partials/footer %>