<% include ../partials/header %>

    <div class="row">
        <h1 class="center">Edit <%= job.title %></h1>
        <div class="form">
            <form action="/jobs/<%= job._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="job[title]" value="<%= job.title %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="job[description]" rows="5"><%= job.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/jobs/<%= job._id %>">Go back</a>
        </div>
    </div>

<% include ../partials/footer %>