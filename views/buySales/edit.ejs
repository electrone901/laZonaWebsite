<% include ../partials/header %>

    <div class="row">
        <h1 class="center">Edit <%= buySale.name %></h1>
        <div class="form">
            <form action="/buySales/<%= buySale._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="label label-info" for="name">Name</label>
                    <input class="form-control" type="text" name="buySale[name]" value="<%= buySale.name %>">
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="label label-info" for="price">Price</label>
                            <input class="form-control" type="number" name="buySale[price]" value="<%= buySale.price %>" min="0.01" max="9999999" step="0.01">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="image">Image</label>
                            <input type="file" id="image" name="image" accept="image/*">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="label label-info" for="description">Description</label>
                    <textarea class="form-control" name="buySale[description]" rows="5"><%= buySale.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/buySales/<%= buySale._id %>">Go back</a>
        </div>
    </div>

<% include ../partials/footer %>