<% include ../../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="center">Edit Comment</h1>
        <div class="form">
            <form action="/apartments/<%= apartment %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" ><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/apartments/<%= apartment %>">Go back</a>
        </div>
    </div>
</div>

<% include ../../partials/footer %>