<% include ../../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="center">Add New Comment to <%= apartment.title %></h1>
        <div class="form">
            <form action="/apartments/<%= apartment._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" placeholder="comment"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/apartments">Go back</a>
        </div>
    </div>
</div>

<% include ../../partials/footer %>