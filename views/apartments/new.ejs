<% include ../partials/header %>

    <div class="row">
        <h1 class="center">Create a New Apartment</h1>
        <div class="form">
            <form action="/apartments" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="label label-info" for="name">Name</label>
                    <input class="form-control" type="text" name="apartment[name]" placeholder="name">
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="label label-info" for="price">Price</label>
                            <div class="input-group">
                                <div class="input-group-addon">$</div>
                                <input class="form-control" type="number" name="apartment[price]" placeholder="price" min="1" max="9999999" step="1">
                                <div class="input-group-addon">.00</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="label label-info" for="image">Image</label>
                            <input type="file" id="image" name="image" accept="image/*" required>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="label label-info" for="street">Street</label>
                    <input class="form-control" type="text" name="apartment[street]" placeholder="street">
                </div>
                <div class="form-group">
                    <label class="label label-info" for="city">City</label>
                    <input class="form-control" type="text" name="apartment[city]" placeholder="city">
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="label label-info" for="state">State</label>
                            <input class="form-control" type="text" name="apartment[state]" placeholder="state">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="label label-info" for="zipcode">Zipcode</label>
                            <input class="form-control" type="number" name="apartment[zipcode]" placeholder="zipcode" min="10000" max="99999">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Location">
                </div>
                <div class="form-group">
                    <label class="label label-info" for="description">Description</label>
                    <textarea class="form-control" name="apartment[description]" placeholder="description" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <label class="label label-info" for="note">Note</label>
                    <textarea class="form-control" name="apartment[note]" placeholder="note" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/apartments">Go back</a>
        </div>
    </div>

<% include ../partials/footer %>