<% include ../partials/header %>

    <div class="row">
        <h1 class="center">Edit <%= apartment.name %></h1>
        <div class="form">
            <form action="/apartments/<%= apartment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label class="label label-info" for="name">Name</label>
                    <input class="form-control" type="text" name="apartment[name]" value="<%= apartment.name %>">
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="label label-info" for="price">Price</label>
                            <input class="form-control" type="number" name="apartment[price]" value="<%= apartment.price %>" min="0.01" max="9999999" step="0.01">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="label label-info" for="image">Image</label>
                            <input class="form-control" type="text" name="apartment[image]" value="<%= apartment.image %>">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="label label-info" for="street">Street</label>
                    <input class="form-control" type="text" name="apartment[street]" value="<%= apartment.street %>">
                </div>
                <div class="form-group">
                    <label class="label label-info" for="city">City</label>
                    <input class="form-control" type="text" name="apartment[city]" value="<%= apartment.city %>">
                </div>
                 <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="label label-info" for="state">State</label>
                            <input class="form-control" type="text" name="apartment[state]" value="<%= apartment.state %>">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="label label-info" for="zipcode">Zipcode</label>
                            <input class="form-control" type="number" name="apartment[zipcode]" value="<%= apartment.zipcode %>" min="10000" max="99999">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="label label-info" for="description">Description</label>
                    <textarea class="form-control" name="apartment[description]" rows="5"><%= apartment.description %></textarea>
                </div>
                <div class="form-group">
                    <label class="label label-info" for="note">Note</label>
                    <textarea class="form-control" name="apartment[note]" rows="5"><%= apartment.note %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/apartments/<%= apartment._id %>">Go back</a>
        </div>
    </div>

<% include ../partials/footer %>