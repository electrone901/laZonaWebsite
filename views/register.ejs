<% include ./partials/header %>

    <div class="row">
        <h1 class="center">Regístrate</h1>
        <div class="form">
            <form action="/register" method="POST">
                <div class="form-group">
                    <label class="label label-info" for="username">Nombre de Usuario</label>
                    <input class="form-control" type="text" name="username" placeholder="Nombre de Usuario">
                </div>
                <div class="form-group">
                    <label class="label label-info" for="email">Email</label>
                    <input class="form-control" type="email" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <label class="label label-info" for="password">Contraseña</label>
                    <input class="form-control" type="password" name="password" placeholder="Contraseña">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Entrar</button>
                </div>
            </form>
            <a href="/">Regresa</a>
        </div>
    </div>

<% include ./partials/footer %>