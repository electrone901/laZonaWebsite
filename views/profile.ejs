    <div class="row">
        <h1 class="center">Profile</h1>
        <div class="form">
            <form action="/profile/<%= currentUser.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="user[username]" value="<%= currentUser.username %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

