<% include ../partials/header %>

    <div class="row">
        <h1 class="center">Crea una Nueva Mascota</h1>
        <div class="form">
            <form action="/pets" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="label label-info" for="title">Título</label>
                    <input class="form-control" type="text" name="pet[title]" placeholder="Título">
                </div>
                <div class="form-group">
                    <label class="label label-info" for="image">Imagen</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <label class="label label-info" for="description">Descripción</label>
                    <textarea class="form-control" name="pet[description]" placeholder="Descripción" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Enviar</button>
                </div>
            </form>
            <a href="/pets">Regresa</a>
        </div>
    </div>

<% include ../partials/footer %>