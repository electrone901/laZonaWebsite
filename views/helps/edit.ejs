<% include ../partials/header %>

    <div class="row">
        <h1 class="center">Edit <%= help.title %></h1>
        <div class="form">
            <form action="/helps/<%= help._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label class="label label-info" for="title">Title</label>
                    <input class="form-control" type="text" name="help[title]" value="<%= help.title %>">
                </div>
                <div class="form-group">
                    <label class="label label-info" for="description">Description</label>
                    <textarea class="form-control" name="help[description]" rows="5"><%= help.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/helps/<%= help._id %>">Go back</a>
        </div>
    </div>

<% include ../partials/footer %>